<div id="sessions_middlebox">
<p class="magic_font" style="margin-left:5%; margin-top:0px;">New Account</p>

<%= form_tag "/auth/identity/register" do %>

		<% if @identity && @identity.errors.any? %>
	    <div class="error_messages">
	      <h2><%= pluralize(@identity.errors.count, "error") %> prohibited this account from being saved:</h2>
	      <ul>
	      <% @identity.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	
	<div id="sessions_field">
	<div id="sessions_new_divider" class="span9">
	
	  <%= label_tag "Full name" %>
	  <%= text_field_tag :name, @identity.try(:name), :class=>"span4" %>
	  <%= label_tag :email %></span>
	  <%= text_field_tag :email, @identity.try(:email), :class=>"span4" %>
	  <%= label_tag :password %>
	  <%= password_field_tag :password, "", :class=>"span4" %>
	  <%= label_tag :password_confirmation %>
	  <%= password_field_tag :password_confirmation, "", :class=>"span4" %>
	  <%=submit_tag "Register", :class=>"btn btn-success" %>
	</div>

	<img src="/assets/einsteinequation.png" id="sessions_new_divider" class="span5">
	<p class="magic_font" style="margin:0; margin-left:5%; float:left; font-size:17px;">Happy PANDO</p>
	</div>
		
<% end %>
</div>
