<%@content = renderplate.summary ||= renderplate.content ||= ""  %>

<%  @anv = User.find_by_id(renderplate.user_id) %>
<%  @set = Setting.find_by_id(renderplate.user_id) %>
<% @sanitized_content = Sanitize.clean(@content).first(500) %>

<div id="feedbox" class="row">
  <div id="feedbox_content_identity">
	<%if !renderplate.thumbnail_url.nil? || !renderplate.linkobject.nil? %>
	<div id="userinfo_identity">
		<div id="identity_photo_box_after_resize">
			<%if renderplate.thumbnail_url.nil?%>
				<img src='<%=renderplate.linkobject %>' class="identity_resize">
			<%else%>
				<img src='<%=renderplate.thumbnail_url %>' class="identity_resize">
			<%end%>
						
		</div>
	</div>
	<%end%>
	
	<div id="identity_feedbox_shadow">
		<p class="headerlinkstyle" style="margin-left:2%;"> <%= link_to renderplate.title, renderplate %></p>
		
	<p class="feedtext_identity"><%=@sanitized_content %></p>
	<p class="identity_feedtext_logo_and_title"><img src="<%=renderplate.feedpic%>" class="home_feed_pic_size"> <%=renderplate.type_of_feed%><br><%=renderplate.created_at.strftime("%H:%M %d/%m/%Y")%></p>
	</div>	
	</div>
</div>