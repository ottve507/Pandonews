<%= form_for(@feed) do |f| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
      <% @feed.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.text_field :title, :class=>"new_feed_form_title", :placeholder => "title" %>
	<%= f.text_area :content, :class=>"new_feed_form_content", :placeholder => "content"  %>
    <%= f.text_field :language, :class=>"new_feed_form_title", :placeholder => "language", :value => @language_setting   %>
 	<%= f.text_field :tag_list, :class=>"new_feed_form_title", :placeholder => "tags (seperated by spaces)" %>
	<%= f.collection_select :original_plate_id, @plates, :id, :name%>

<div id='input'>
    <%= f.text_field :location, :id=>"gmaps-input-address", :class=>"new_feed_form_title", :placeholder => "location", :value => @location_setting[0].city + ', ' + @location_setting[0].country  %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
