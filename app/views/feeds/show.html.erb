<%@content = @feed.content ||= @feed.summary ||= ""  %>
<%@content = Sanitize.clean(@content)  %>
<%@meta = Sanitize.clean(@content) + ' ' + @feed.title + ' ' + 'news ' + 'rss ' + 'parser ' + 'feedly ' + 'pulse ' + 'world ' + 'nyheter ' + @feed.type_of_feed%>
<%
meta :title => "Pandonews: " + @feed.title + " " + @feed.type_of_feed,
     :description => @feed.title,
     :keywords => @meta.split(/ /).join(', ')
%>
<%meta [:property => "og:image", :content => @feed.thumbnail_url]%>
<%meta [:property => "og:image", :content => @feed.linkobject]%>


<script
src="http://maps.googleapis.com/maps/api/js?sensor=false">
</script>

<script>
function initialize()
{
var myLatlng = new google.maps.LatLng(<%=@feed.latitude%>,<%=@feed.longitude%>);
var mapProp = {
  center:myLatlng,
  zoom:13,
  mapTypeId:google.maps.MapTypeId.ROADMAP
  };
var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);

var marker = new google.maps.Marker({
    position: myLatlng,
    map: map,
});



}

function displayMap() {
             document.getElementById('feed_show_map').style.display="block";
             initialize();
         }
</script>

<div id="show_feed_wrapper">
	<div id="dialog">
		<center><img src="<%=@feed.feedpic%>" class="home_feed_pic_size"><br>
		<%=@feed.type_of_feed%><br>
		<%if current_user && !current_user.plates.nil? && !Cronfeed.find_by_address(@feed.url_to_feed).nil?%>		
		<%= form_for(@cpr) do |cpr| %>
			<%= cpr.collection_select :plate_id, current_user.plates, :id, :name%>
			<%=cpr.hidden_field :cronfeed_id, :value=>Cronfeed.find_by_address(@feed.url_to_feed).id%>
			<%=cpr.submit "Subscribe"%>
		<%end%>
		<%elsif current_user && current_user.plates.nil? %>
		<%=link_to "Create a plate in order\n to subscribe!", '/plates/new'%>
		<%else%>
		<%=link_to "Login in order to create\n a plate and subscribe!", sessions_path%>
		<%end%>	
		</center>		
	</div>
		
		<p>
		  <h2 class="show_link">
		 <center> <%= link_to @feed.title, @feed.url %></center>
		 </h2>
		</p>
  		<span class="span8"><%= @content.html_safe%></span>

<center>
	<span class="span8">
		<img src="<%= @feed.thumbnail_url %>">
		<img src="<%= @feed.linkobject %>">
	</span>
</center>

		
		
			<hr class="span8 style-two">
		
		<div id="show_feed_wrapper_bottom">

			<div id="title_divider_left">
				<%  @user = User.find_by_id(@feed.user_id) %>
				<% @setting = Setting.find(@user.id) %>


			
					<%if @feed.location%>
					<p class="location_feeds">
					Location: </p><%=@feed.location%>
					<%end%>
				
<p>
				<p class="info_feeds">
					comments 
				</p>
				<p class="info_feeds_color">
					<%=@feed.comments.count%>
				</p>	
				<p class="info_feeds">
					read count
				</p>	
				<p class="info_feeds_color">
					<%=@article.unique_impression_count%> 
				</p>
				<p class="info_feeds">
					rating
				</p>	
				<p class="info_feeds_color">
					<%=@feed.votes%>
				</p>
				<br>
				<% if current_user %>
				  	<%if current_user.up_voted?(@feed)%>
					up
					<%else%>
					<%= link_to " up", vote_path(:type=>"up"), :class=>"icon-thumbs-up" %>
					<%end%>
					|
					<%if current_user.down_voted?(@feed)%>
					down
					<%else%>
					<%= link_to " down", vote_path(:type=>"down"), :class=>"icon-thumbs-down" %>
					<%end%>
				<% end %>
				
				</div>

				<div id="title_divider_right">
					<a href="#" id="create-user"><img src="<%=@feed.feedpic%>"> <%=@feed.type_of_feed%></a>
					<br><%=@feed.created_at.strftime("%H:%M %d/%m/%Y")%><br>
					<%=@feed.language%>
				</div>




	
	
<%if @feed.location!=nil%>	
<p style="margin-top:40px;">
	<button onclick="displayMap()">Show Map</button>
	<div id ="feed_show_map">
		<div id="feed_show_map_left">
		<div id="googleMap"></div>
		</div>
		
		<%if @localfeeds != nil%>
		<div id="feed_show_map_right">
			<p class="location_feeds">Nearby happenings</p>
			<% for f in @localfeeds %>
			  <ul><%= link_to f.location, f %> (<%= f.distance.round(2) %> miles)</ul>
			<% end %>	
		</div>
		<%end%>
		
		
	</div>
</p>
<%end%>		
		
	</div>
</div>


<div id="bottom_stuff_feeds">
	<div id="commenting_area"> <%if current_user%> <%= render "comments/form"%> <%else%> <%= link_to "login to
		comment.", sessions_path %> <%end%> </div>
		<%if @comments%>
			<%= nested_comments @comments%>
		<%end%>

		<%= will_paginate @comments, :class => 'pagination_comments', :page_links => false, :next_label => 'load more comments' %>	
</div>




